{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

    <div class="pt-20 pb-5">

        <div class="flex max-w-screen-md flex-col space-y-5 rounded-lg border py-10 px-5 shadow-xl mx-auto">

            <div class="mx-auto mb-2 space-y-3">
                <h1 class=" text-3xl font-bold text-gray-700">Register</h1>
                <p class="text-gray-500">Register new account</p>
            </div>

            {{form_start(registrationForm, { 'attr' : { 'class': 'relative space-y-3 rounded-md bg-white p-6 lg:p-10'} }) }}

                {{ form_errors(registrationForm) }}

                <div class="grid gap-3 md:grid-cols-2">
                    <div class="relative mt-2 w-full">
                        {{ form_label(registrationForm.firstname, 'First Name', { 'label_attr' : { 'class' : 'text-base text-gray-500'}}) }}
                        {{ form_widget(registrationForm.firstname, {'attr': {'class': 'border-1 peer block w-full appearance-none rounded-lg border border-gray-300 bg-transparent px-2.5 pb-2.5 pt-4 text-sm text-gray-900 focus:border-blue-600 focus:outline-none focus:ring-0'}}) }}
                        {{ form_errors(registrationForm.firstname) }}
                    </div>
                    <div class="relative mt-2 w-full">
                        {{ form_label(registrationForm.lastname, 'Last Name', { 'label_attr' : { 'class' : 'text-base text-gray-500'}}) }}
                        {{ form_widget(registrationForm.lastname, {'attr': {'class': 'border-1 peer block w-full appearance-none rounded-lg border border-gray-300 bg-transparent px-2.5 pb-2.5 pt-4 text-sm text-gray-900 focus:border-blue-600 focus:outline-none focus:ring-0'}}) }}
                        {{ form_errors(registrationForm.lastname) }}
                    </div>
                </div>

                <div class="grid gap-3">
                    <div class="relative mt-2 w-full">
                        {{ form_label(registrationForm.email, 'Email Address', { 'label_attr' : { 'class' : 'text-base text-gray-500'}}) }}
                        {{ form_widget(registrationForm.email, {'attr': {'class': 'border-1 peer block w-full appearance-none rounded-lg border border-gray-300 bg-transparent px-2.5 pb-2.5 pt-4 text-sm text-gray-900 focus:border-blue-600 focus:outline-none focus:ring-0'}}) }}
                        {{ form_errors(registrationForm.email) }}
                    </div>
                </div>

                <div class="grid gap-3 md:grid-cols-2">
                    <div class="relative mt-2 w-full">
                        {{ form_label(registrationForm.plainPassword.first, 'Password', { 'label_attr' : { 'class' : 'text-base text-gray-500'}}) }}
                        {{ form_widget(registrationForm.plainPassword.first, {'attr': {'class': 'border-1 peer block w-full appearance-none rounded-lg border border-gray-300 bg-transparent px-2.5 pb-2.5 pt-4 text-sm text-gray-900 focus:border-blue-600 focus:outline-none focus:ring-0'}}) }}
                        {{ form_errors(registrationForm.plainPassword.first) }}
                    </div>
                    <div class="relative mt-2 w-full">
                        {{ form_label(registrationForm.plainPassword.second, 'Repeated password', { 'label_attr' : { 'class' : 'text-base text-gray-500'}}) }}
                        {{ form_widget(registrationForm.plainPassword.second, {'attr': {'class': 'border-1 peer block w-full appearance-none rounded-lg border border-gray-300 bg-transparent px-2.5 pb-2.5 pt-4 text-sm text-gray-900 focus:border-blue-600 focus:outline-none focus:ring-0'}}) }}
                        {{ form_errors(registrationForm.plainPassword.second) }}
                    </div>
                </div>

                <div class="checkbox text-base text-gray-500 space-y-3">
                    {{ form_row(registrationForm.agreeTerms) }}
                    {{ form_errors(registrationForm.agreeTerms) }}
                </div>

                <div>
                    <div class="relative mt-10 w-full">
                        <button class="w-full rounded-lg bg-blue-600 py-3 font-bold text-white">Register</button>
                    </div>
                </div>

            {{ form_end(registrationForm) }}

            <div class="text-center text-gray-600">
                Already have an account ? <a href="{{ path('app_login') }}">Login here</a>
            </div>

        </div>

    </div>

{% endblock %}
